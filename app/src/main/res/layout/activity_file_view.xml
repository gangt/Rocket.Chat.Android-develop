<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/activity_top_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bg_horizontal_line_color"/>

    <LinearLayout
        android:id="@+id/ll_community_ours"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/unknow_file"/>

        <TextView
            android:id="@+id/tv_fileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@color/color_08"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/open_remind"
            android:textColor="@color/color_6b"/>

        <Button
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_blue_bg"
            android:textSize="12sp"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:text="@string/download"/>
        
    </LinearLayout>

</LinearLayout>