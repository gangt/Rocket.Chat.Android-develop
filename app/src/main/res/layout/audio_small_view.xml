<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/audio_small_view"
    android:background="@drawable/circle_rec"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/audio_scale_view"
        android:layout_alignParentRight="true"
        android:layout_width="85dp"
        android:layout_height="108dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:id="@+id/audio_open_img"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
          />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_waiting"
            android:scaleType="fitCenter"
            android:foregroundGravity="center"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/audio_scale_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:textColor="@color/audio_text_color"
            />

    </FrameLayout>

</RelativeLayout>
