<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eaeaea"
    android:orientation="vertical">

    <include
        layout="@layout/activity_top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/group_member"/>

            <!--会议主持人-->
            <LinearLayout
                android:id="@+id/ll_host"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_zhuchiren"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_group_zhuciren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6b"
                    android:textSize="13sp" />
                <ImageView
                    android:id="@+id/iv_zhuchiren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_eaeaea" />
            <!--频道创建者-->
            <LinearLayout
                android:id="@+id/ll_group_created"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="@string/group_created_meeting"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_group_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6b"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_eaeaea" />



            <!--会议时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="@string/group_meeting_time"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_meeting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6b"
                    android:textSize="13sp" />

            </LinearLayout>

            <!--会议主题-->
            <LinearLayout
                android:id="@+id/ll_groupName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="@string/meeting_theme2"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6b"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_right" />
            </LinearLayout>

            <!--会议内容-->
            <LinearLayout
                android:id="@+id/ll_group_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/group_meeting_content"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_group_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_6b"
                    android:textSize="13sp" />

            </LinearLayout>

            <!--会议签到-->
            <LinearLayout
                android:id="@+id/ll_qiandao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/meeting_qiandao"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_jiantou" />
            </LinearLayout>

            <!--会议附件-->
            <LinearLayout
                android:id="@+id/ll_fujian"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fujian"
                    android:textColor="@color/color_08"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_jiantou" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_qiandao"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/info_lan_bg"
                android:gravity="center"
                android:text="@string/already_qiandao"
                android:textColor="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_owner"
                android:visibility="gone"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pause"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue_bg"
                    android:gravity="center"
                    android:text="@string/meeting_pause"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:background="@drawable/group_red_bg"
                    android:gravity="center"
                    android:text="@string/meeting_finish"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>