<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/audio_small_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:scaleType="fitCenter"
        android:src="@mipmap/screann_close"
        android:visibility="visible" />
    <FrameLayout
        android:id="@+id/audio_scale_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_width="@dimen/dimen_85_dip"
        android:layout_height="@dimen/dimen_108_dip"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/audio_open_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/audio_waiting"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/audio_scale_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="8sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_80_dip"

            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/invite_center_show_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_200_dip"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/audio_user_avar"
            android:layout_width="@dimen/dimen_122_dip"
            android:layout_height="@dimen/dimen_122_dip"
            />

        <TextView
            android:id="@+id/audio_username_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <chat.rocket.android.video.view.LoadingTextView
            android:id="@+id/invite_state_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/audio_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_250_dip"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dimen_5_dip"
        android:paddingRight="@dimen/dimen_5_dip"
        android:layout_height="wrap_content">

        <chat.rocket.android.video.view.CustomShowTextView
            android:id="@+id/audio_custom_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_not_here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/audio_canccel_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_50_dip"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/audio_invite_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cancel_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_remote_call_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_33_dip"
        android:layout_marginRight="@dimen/dimen_33_dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/audio_cancel_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@mipmap/cancel_phone" />

        <ImageView
            android:id="@+id/audio_answer_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="0.3"
            android:src="@mipmap/audio_answer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_answer_call_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_50_dip"
        android:layout_marginLeft="@dimen/dimen_33_dip"
        android:layout_marginRight="@dimen/dimen_33_dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/audio_jump_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/audio_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/micro_mute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11_dip"
                android:text="@string/mute"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/audio_canccel_invite_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hang_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cancel_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11_dip"
                android:text="@string/hang_up"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_speakphone_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/audio_speakphone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/speakphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11_dip"
                android:text="@string/speakphone"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
